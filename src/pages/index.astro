---
import Layout from '../layouts/Layout.astro'

import { profile } from '@/settings'
import { publications } from '@/data/cv'
import Hero from '@/components/ui/Hero.astro'
import Grid from '@/components/ui/Grid.astro'
import ArticleList from '@/components/ui/ArticleList.astro'
import { useTranslations, type Locale } from '@/i18n/translations'

const { fullName, title, institute, research_areas } = profile
const currentLocale = (Astro.currentLocale || 'es') as Locale
const t = useTranslations(currentLocale)

---

<Layout>
	<!-- Hero Section -->
	<section class='flex items-center gap-12 border-b pb-12'>
		<Hero
			fullName={fullName}
		/>
	</section>

	<!-- Research Areas -->
	<section class='py-12 border-b'>
		<Grid gridTitle={t('home.researchAreas')} gridItems={research_areas} />
	</section>

	<!-- Recent Publications -->
	<section class='py-12 border-t'>
		<ArticleList listTitle={t('home.recentPublications')} listItems={publications} />
	</section>
</Layout>
