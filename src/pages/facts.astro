---
import Layout from '@/layouts/Layout.astro'
import { useTranslations, type Locale } from '@/i18n/translations'

const currentLocale = (Astro.currentLocale || 'es') as Locale
const t = useTranslations(currentLocale)
const factsData = t('facts') as { pageTitle: string; items: Array<{ title: string; description: string }> }
---

<Layout>
	<section class='mb-12'>
		<h1 class='text-2xl font-bold mb-6 border-b pb-2'>
			{factsData.pageTitle}
		</h1>

		<ul class='space-y-4'>
			{factsData.items.map((fact) => (
				<li>
					<div class='flex flex-col gap-1'>
						<div class='text-lg font-bold'>{fact.title}</div>
						<div class='text-md opacity-80'>{fact.description}</div>
					</div>
				</li>
			))}
		</ul>
	</section>
</Layout>
