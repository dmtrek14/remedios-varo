---
import { Image } from 'astro:assets'
import {profile} from '../../settings'
import ProfilePictures from '@/assets/profile_pictures.jpg'
import { template } from '@/settings'
import { useTranslations, type Locale } from '@/i18n/translations'

const {fullName, title} = profile
const currentLocale = (Astro.currentLocale || 'es') as Locale
const t = useTranslations(currentLocale)

// Helper to build localized URLs
const localePath = currentLocale === 'es' ? '' : `/${currentLocale}`
---
<aside
	class='px-4 pt-4 h-screen w-[20rem] bg-base-200 text-base-content flex flex-col'
>
	<div class='flex flex-col my-8 justify-between h-full'>
		<div>
			<div class='flex justify-center items-center flex-col'>
				<Image
					class='mask mask-circle size-44'
					src={ProfilePictures}
					alt={`Profile picture of ${fullName}`}
				/>
				<h1 class="text-lg font-black mt-8 hidden lg:block">{title} <span>{fullName}</span></h1>
			</div>
			<div class='mx-4 mt-16'>
				<ul class='space-y-4 menu grow shrink menu-md overflow-y-auto'>
					<li>
                        <a href={`${template.base}${localePath}/`} class='text-lg'>{t('nav.home')}</a>
					</li>
					<li>
                        <a href={`${template.base}${localePath}/life`} class='text-lg'>{t('nav.life')}</a>
					</li>
					<li>
                        <a href={`${template.base}${localePath}/work`} class='text-lg'>{t('nav.work')}</a>
					</li>
					<li>
                        <a href={`${template.base}${localePath}/facts`} class='text-lg'>{t('nav.facts')}</a>
                    </li>
                    <li>
                        <a href={`${template.base}${localePath}/references`} class='text-lg'>{t('nav.references')}</a>
                    </li>
				</ul>
			</div>
		</div>
		<!-- <div class='mx-4'>
			<SocialIcons/>
		</div> -->
	</div>
</aside>
